<Window x:Class="VSHistory.VersionFilters"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VSHistory"
        mc:Ignorable="d"
        Title="Filter VS History Versions"
        WindowStartupLocation="CenterScreen"
        SizeToContent="WidthAndHeight"
        Loaded="Window_Loaded"
        Height="500"
        Width="600">

    <Grid Margin="7">

        <Grid.Resources>

            <Style TargetType="Button">
                <Setter Property="Margin" Value="15,5"/>
                <Setter Property="Padding" Value="15,0"/>
                <Setter Property="VerticalAlignment" Value="Center"/>
            </Style>

        </Grid.Resources>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Margin="5">
            Enter strings to filter the VS History files that will be shown in the list.
        </TextBlock>

        <StackPanel Orientation="Horizontal" Grid.Row="1" >

            <RadioButton
                x:Name="radInclude1"
                Content="Files that contain"
                IsChecked="{Binding Include1, Mode=TwoWay}"
                Margin="5"
                />

            <RadioButton
                x:Name="radExclude1"
                Content="Files that DO NOT contain"
                IsChecked="{Binding Exclude1, Mode=TwoWay}"
                Margin="5"
                />

            <CheckBox
                x:Name="chkIgnoreCase1"
                Content="Ignore case"
                IsChecked="{Binding IgnoreCase1, Mode=TwoWay}"
                Margin="5"
                />

        </StackPanel>

        <TextBox
            x:Name="txtString1"
            Grid.Row="2"
            Text="{Binding searchString1, Mode=TwoWay}"
            Margin="5"
            TextChanged="txtString1_TextChanged"
            />

        <Separator Grid.Row="3" Margin="0,5"/>

        <StackPanel Orientation="Horizontal" Grid.Row="4" x:Name="stackPart2">

            <RadioButton
                x:Name="radOrInclude"
                Content="OR Files that contain"
                IsChecked="{Binding OrInclude, Mode=TwoWay}"
                Margin="5"
                />

            <RadioButton
                x:Name="radInclude2"
                Content="AND Files that ALSO contain"
                IsChecked="{Binding Include2, Mode=TwoWay}"
                Margin="5"
                />

            <RadioButton
                x:Name="radExclude2"
                Content="AND Files that DO NOT contain"
                IsChecked="{Binding Exclude2, Mode=TwoWay}"
                Margin="5"
                />

            <CheckBox
                x:Name="chkIgnoreCase2"
                Content="Ignore case"
                IsChecked="{Binding IgnoreCase2, Mode=TwoWay}"
                Margin="5"
                />

        </StackPanel>

        <TextBox
            x:Name="txtString2"
            Grid.Row="5"
            Text="{Binding searchString2, Mode=TwoWay}"
            Margin="5"
            />

        <Separator Grid.Row="6" Margin="0,5"/>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Grid.Row="7" Margin="5">

            <Button
                x:Name="btnClear"
                Content="_Clear"
                Click="btnClear_Click"
                />

            <Button
                x:Name="btnOK"
                Content="_OK"
                IsDefault="True"
                Click="btnOK_Click"
                />

            <Button
                x:Name="btnCancel"
                Content="Cancel"
                IsCancel="True"
                />

        </StackPanel>

    </Grid>

</Window>
